<UserControl x:Class="bazy1.Views.Receptionist.Pages.EditPatientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel>
            <Label Content="Imie:" />
            <TextBox Text="{Binding Patient.Name, Mode=TwoWay}" />
            <Label Content="Nazwisko:" />
            <TextBox Text="{Binding Patient.Surname, Mode=TwoWay}" />
            <Label Content="PESEL:" />
            <TextBox Text="{Binding Patient.Pesel, Mode=TwoWay}" />
            <Label Content="Telefon:" />
            <TextBox Text="{Binding Patient.PhoneNumber, Mode=TwoWay}" />
            <Label Content="Email:" />
            <TextBox Text="{Binding Patient.Email, Mode=TwoWay}" />
            <!-- Dodaj inne pola do edycji tutaj -->

            <Button Content="Zapisz" Command="{Binding SaveCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
